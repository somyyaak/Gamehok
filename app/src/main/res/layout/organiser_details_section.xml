<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_border">

    <TextView
        android:id="@+id/organiser_details_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Organiserâ€™s Details and contact"
        android:padding="16dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/tournament_prizes_gradient"
        app:layout_constraintTop_toTopOf="parent"/>



    <ImageView
        android:id="@+id/details_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toBottomOf="@id/organiser_details_label"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/organiser_details_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Gamehok Esports"
        android:textColor="@color/white"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/details_icon"
        app:layout_constraintTop_toTopOf="@id/details_icon"/>

    <Button
        android:id="@+id/follow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:textColor="@color/white"
        android:backgroundTint="#182920"
        app:layout_constraintTop_toTopOf="@id/organiser_details_name"
        app:layout_constraintBottom_toBottomOf="@id/organiser_details_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/organiser_details_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="This is the in house organiser of this platform you can follow our page on this platform for regular updates"
        android:textColor="#BCBCBC"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/follow_button"
        app:layout_constraintTop_toBottomOf="@id/details_icon"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/phone_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/baseline_phone_iphone_24"
        app:layout_constraintTop_toBottomOf="@id/organiser_details_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9890987754"
        android:textColor="#BCBCBC"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/phone_icon"
        app:layout_constraintTop_toTopOf="@id/phone_icon"
        app:layout_constraintBottom_toBottomOf="@id/phone_icon"/>

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/baseline_email_24"
        app:layout_constraintTop_toBottomOf="@id/organiser_details_description"
        app:layout_constraintRight_toLeftOf="@id/email_value"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/email_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9890987754"
        android:textColor="#BCBCBC"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/email_icon"
        app:layout_constraintBottom_toBottomOf="@id/email_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/whatsapp_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/whatsapp_icon"
        app:layout_constraintTop_toBottomOf="@id/phone_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/whatsapp_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="9890987754"
        android:textColor="#BCBCBC"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toRightOf="@id/whatsapp_icon"
        app:layout_constraintTop_toTopOf="@id/whatsapp_icon"
        app:layout_constraintBottom_toBottomOf="@id/whatsapp_icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>