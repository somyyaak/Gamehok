<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/gamer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/gamer"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/gamerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Legend Gamer"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/gamer"
        app:layout_constraintBottom_toBottomOf="@id/gamer"
        app:layout_constraintLeft_toRightOf="@id/gamer"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/follow_btn"
        android:layout_marginEnd="16dp"
        android:text="@string/follow"
        app:layout_constraintTop_toTopOf="@id/gamerName"
        app:layout_constraintBottom_toBottomOf="@id/gamerName"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>