<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_border_banner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
    android:id="@+id/banner_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create your own tounaments"
    android:textSize="14sp"
    android:textColor="@color/black"
        android:textStyle="bold"
    android:layout_marginTop="14dp"
    android:layout_marginStart="14dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/banner_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Host and manage your own tournaments and play with your friends"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/banner_title"
        app:layout_constraintRight_toLeftOf="@id/controller_icon"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <ImageView
        android:id="@+id/controller_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/controller"
        android:layout_margin="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>