<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:background="@drawable/round_border"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/team"
        android:layout_width="200dp"
        android:background="@drawable/tournament_item_background"
        android:layout_height="150dp"
        android:src="@drawable/team"
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slickshot"
        android:id="@+id/user_name"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/team"
        app:layout_constraintLeft_toLeftOf="@id/team"
        app:layout_constraintRight_toRightOf="@id/team"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:backgroundTint="#0CF285"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintLeft_toLeftOf="@id/user_name"
        app:layout_constraintRight_toRightOf="@id/user_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>