<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/dot_icon"
        android:layout_width="4dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="@id/join_instructions"
        app:layout_constraintBottom_toBottomOf="@id/join_instructions"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/baseline_circle_24" />

    <TextView
        android:id="@+id/join_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/dot_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#BCBCBC"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        tools:text = "Have your game open already and on the latest version"/>


</androidx.constraintlayout.widget.ConstraintLayout>