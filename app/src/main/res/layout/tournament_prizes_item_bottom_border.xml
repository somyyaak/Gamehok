<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/round_border_bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <ImageView
        android:id="@+id/trophy_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/trophy_prize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/prize_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1st Prize"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/trophy_icon"
        app:layout_constraintLeft_toRightOf="@id/trophy_icon"
        app:layout_constraintBottom_toBottomOf="@id/trophy_icon"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/prize_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        tools:text="1000"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/prize_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/prize_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/organiser_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/prize_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>